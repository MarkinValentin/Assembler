#include <stdio.h>
#include <ctype.h>

#define STRING_LENGHT 18
const char testString[] = "AAAAfsdsfvbndBBNN";

volatile int totalUppercaseLetters = 0;


void countUppercaseLatter(const char* segment, int length) {
    for (int i = 0; i < length; ++i){
        if (isupper(segment[i])){
            ++totalUppercaseLetters;
        }
    }
}
