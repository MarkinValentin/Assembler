#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char test[] = "T3sT sTr1ng"; // ваша строка
    int uppercase_count = 0;

    for (int i = 0; i < strlen(test); i++) {
        if (isupper(test[i])) {
            uppercase_count++;
        }
    }

    printf("Количество заглавных букв в строке: %d\n", uppercase_count);

    return 0;
}
