#include "ns3/core-module.h"
#include "ns3/network-module.h"
#include "ns3/lte-module.h"

using namespace ns3;

int main (int argc, char *argv[])
{
  // Создание узлов eNB и UE
  Ptr<Node> enb = CreateObject<Node> ();
  Ptr<Node> ue1 = CreateObject<Node> ();
  Ptr<Node> ue2 = CreateObject<Node> ();

  // Установка LTE устройств
  Ptr<LteHelper> lteHelper = CreateObject<LteHelper> ();
  lteHelper->SetSchedulerType ("ns3::TdMtFfMacScheduler");
  
  // Установка параметров узла eNB
  NetDeviceContainer enbDevs = lteHelper->InstallEnbDevice (enb);
  
  // Установка параметров узлов UE
  NetDeviceContainer ue1Devs = lteHelper->InstallUeDevice (ue1);
  NetDeviceContainer ue2Devs = lteHelper->InstallUeDevice (ue2);
  
  // Установка фиктивной сетевой архитектуры
  lteHelper->Attach (ue1Devs, enbDevs.Get (0));
  lteHelper->Attach (ue2Devs, enbDevs.Get (0));
  
  // Запуск симуляции
  Simulator::Stop (Seconds (10));
  Simulator::Run ();
  Simulator::Destroy ();
  
  return 0;
}
